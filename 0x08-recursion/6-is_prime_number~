#include <stdio.h>
#include "main.h"

/**
	* is_prime_number - check if a number is prime.
	* @n: The number to be checked.
	*
	* Return: 1 if the number is prime, 0 otherwise.
	*/
int is_prime_number(int n)
{
	int i = 2;

	if (n <= 1)
	return (0);

	while (i * i <= n)
	{
		if (n % i == 0)
		return (0);
		i++;
	}

	return (0);
}
