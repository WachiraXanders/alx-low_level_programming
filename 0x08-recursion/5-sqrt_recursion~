#include <stdio.h>
#include "main.h"
#include <math.h>

/**
	*_sqrt_recursion - To find the squareroot of the values of x.
	*@n: The number that you are going to find the square root
	*
	*Return: The value of the square root
	*/
int _sqrt_recursion(int n)
{
	if (n == 0)
	{
		return (0);
	}
	else if (n < 0)
	{
		return (-1);
	}
	else
	{
		return (n);
	}
}
